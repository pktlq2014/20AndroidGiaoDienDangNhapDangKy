<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_marginTop="20dp"
        android:layout_height="150dp"
        android:id="@+id/imageView1"
        android:src="@mipmap/aaa"
        />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="280dp"
        android:layout_gravity="center"
        android:text="Khóa học trưc tuyến itclass.vn"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="#FFEB3B"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp"
        >
        <Button
            android:layout_height="80dp"
            android:layout_width="150dp"
            android:text="Sign in with"
            android:padding="20dp"
            android:textColor="#fff"
            android:background="#3F51B5"
            android:drawableRight="@mipmap/q"
            android:layout_marginRight="30dp"
            />
        <Button
            android:layout_height="80dp"
            android:layout_width="150dp"
            android:text="Sign in with"
            android:padding="20dp"
            android:textColor="#fff"
            android:background="#F43646"
            android:drawableRight="@mipmap/w"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="or"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        />
    <EditText
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:background="#ffff"
        android:gravity="center"
        android:text="Email"
        android:drawableLeft="@mipmap/username"
        android:textSize="40dp"
        android:paddingLeft="10dp"
        />
    <EditText
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:background="#ffff"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Password"
        android:drawableLeft="@mipmap/password"
        android:textSize="40dp"
        android:paddingLeft="10dp"
        />
    <Button
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="#FFC107"
        android:text="Register"
        android:textColor="#ffff"
        android:textSize="20dp"
        />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Log in"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:textColor="#4CAF50"
        />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="I've forgotten my password"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#FF5722"
        />
</LinearLayout>